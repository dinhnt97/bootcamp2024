generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id    Int     @id @default(autoincrement())
  address String  @unique
  avatar String
}

model Fund {
  id    Int     @id @default(autoincrement())
  name  String
  description String
  image String
  fundContractId String
  txHash String @unique
  isCreating Boolean
  totalInvestment Float  @default(0.0)
}

model Investment {
  id      Int     @id @default(autoincrement())
  userId  Int
  fundId  Int
  amount  Float
  
  @@unique([userId, fundId])
}